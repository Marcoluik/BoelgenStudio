<script>
    import gsap from "gsap";

    // Initial animation
    gsap.from(".product-info > *", {
        y: 30,
        opacity: 0,
        duration: 2,
        stagger: 0.15,
        ease: "expo.out",
        delay: 0.3,
    });

    // Simple thumbnail switcher
    const mainImg = document.getElementById("main-image") as HTMLImageElement;
    const thumbnails = document.querySelectorAll(".thumbnail img");

    thumbnails.forEach((thumb) => {
        thumb.parentElement?.addEventListener("click", () => {
            const newSrc = (thumb as HTMLImageElement).src;

            if (mainImg.src === newSrc) return;

            gsap.to(mainImg, {
                opacity: 0,
                scale: 0.98,
                duration: 0.5,
                ease: "power2.inOut",
                onComplete: () => {
                    mainImg.src = newSrc;
                    gsap.to(mainImg, {
                        opacity: 1,
                        scale: 1,
                        duration: 1.2,
                        ease: "expo.out",
                    });
                },
            });
        });
    });

    // Size button selection
    const sizeBtns = document.querySelectorAll(".size-btn");
    sizeBtns.forEach((btn) => {
        btn.addEventListener("click", () => {
            sizeBtns.forEach((b) =>
                b.classList.remove("border-cyan-500", "text-white"),
            );
            btn.classList.add("border-cyan-500", "text-white");
        });
    });

    // Open cart on Add to Collection
    const addToCartBtn = document.querySelector(".add-to-cart-btn");
    addToCartBtn?.addEventListener("click", () => {
        if ((window as any).openCart) {
            (window as any).openCart();
        }
    });

    // Size Guide Modal Logic
    const sizeGuideTrigger = document.querySelector(".size-guide-trigger");
    const modal = document.getElementById("size-guide-modal");
    const modalBackdrop = modal?.querySelector(".modal-backdrop");
    const modalContent = modal?.querySelector(".modal-content");
    const closeModal = modal?.querySelector(".close-modal");

    const openModal = () => {
        if (!modal || !modalBackdrop || !modalContent) return;
        modal.classList.remove("invisible");
        gsap.to(modalBackdrop, { opacity: 1, duration: 0.5 });
        gsap.to(modalContent, {
            opacity: 1,
            y: 0,
            duration: 0.8,
            ease: "expo.out",
        });
    };

    const hideModal = () => {
        if (!modal || !modalBackdrop || !modalContent) return;
        gsap.to(modalContent, { opacity: 0, y: 20, duration: 0.5 });
        gsap.to(modalBackdrop, {
            opacity: 0,
            duration: 0.5,
            onComplete: () => modal.classList.add("invisible"),
        });
    };

    sizeGuideTrigger?.addEventListener("click", openModal);
    closeModal?.addEventListener("click", hideModal);
    modalBackdrop?.addEventListener("click", hideModal);
</script>

